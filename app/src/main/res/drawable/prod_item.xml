<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Adding border layers simulating drop shadow -->
    <item>
        <shape>

            <padding android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="0dp" />
            <solid android:color="#00494949" />
            <corners android:bottomRightRadius="25dp" android:bottomLeftRadius="25dp"
                android:topLeftRadius="25dp" android:topRightRadius="25dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <padding android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="0dp" />
            <solid android:color="#10494949" />
            <corners android:bottomRightRadius="25dp" android:bottomLeftRadius="25dp"
                android:topLeftRadius="25dp" android:topRightRadius="25dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <padding android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="0dp" />
            <solid android:color="#20494949" />
            <corners android:bottomRightRadius="25dp" android:bottomLeftRadius="25dp"
                android:topLeftRadius="25dp" android:topRightRadius="25dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <padding android:top="0dp" android:right="1dp" android:bottom="1dp" android:left="0dp" />
            <solid android:color="#30494949" />
            <corners android:bottomRightRadius="25dp" android:bottomLeftRadius="25dp"
                android:topLeftRadius="25dp" android:topRightRadius="25dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <padding android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp" />
            <solid android:color="#708F8F8F" />
            <corners android:bottomRightRadius="25dp" android:bottomLeftRadius="25dp"
                android:topLeftRadius="25dp" android:topRightRadius="25dp"/>
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
           <solid android:color="#FFFFFF"/>
            <stroke android:width="3dp"
                android:color="#FFFFFF"
                />
            <padding android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp"
                />
            <corners android:bottomRightRadius="25dp" android:bottomLeftRadius="25dp"
                android:topLeftRadius="25dp" android:topRightRadius="25dp"/>
        </shape>
            </item>
        </layer-list>
