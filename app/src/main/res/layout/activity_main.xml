<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/B2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hapticFeedbackEnabled="false"
    android:padding="10dp"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    tools:context=".Activities.RegisterActivity">

    <EditText
        android:id="@+id/name_id"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="80dp"
        android:autoText="true"
        android:background="@drawable/text_view_layout"
        android:ems="10"
        android:hint="Name"
        android:inputType="textWebEmailAddress|textPersonName"
        android:padding="10dp"
        android:textColor="#070707"
        android:textColorHint="#0B0B0B"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sign_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="30dp"
        android:background="#D3EF851A"
        android:text="Sign Up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/job_id" />

    <EditText
        android:id="@+id/job_id"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="40dp"
        android:autofillHints=""
        android:background="@drawable/text_view_layout"
        android:ems="10"
        android:hint="Job"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#070707"
        android:textColorHint="#0B0B0B"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_id" />

    <EditText
        android:id="@+id/gender_id"
        style="@android:style/Widget.DeviceDefault.AutoCompleteTextView"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/text_view_layout"
        android:ems="10"
        android:hint="Gender"
        android:inputType="textShortMessage"
        android:padding="10dp"
        android:textColor="#070707"
        android:textColorHint="#0B0B0B"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_id" />

    <EditText
        android:id="@+id/password_id"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/text_view_layout"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName|textPassword"
        android:padding="10dp"
        android:textColor="#070707"
        android:textColorHint="#0B0B0B"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name_id" />

    <Button
        android:id="@+id/show_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="30dp"
        android:background="#D3EF851A"
        android:text="Log in"
        app:layout_constraintStart_toEndOf="@+id/sign_button_id"
        app:layout_constraintTop_toBottomOf="@+id/job_id" />

    <TextView
        android:id="@+id/date_id"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/text_view_layout"
        android:gravity="center"
        android:hint="Set Birthdate"
        android:padding="10dp"
        android:shadowColor="#A86565"
        android:textColor="#090909"
        android:textColorHint="#070707"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender_id" />

    <EditText
        android:id="@+id/user_name_id"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/text_view_layout"
        android:ems="10"
        android:hint="User Name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="#070707"
        android:textColorHint="#0B0B0B"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_id" />

</androidx.constraintlayout.widget.ConstraintLayout>